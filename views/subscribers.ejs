<title>Subscriber List App</title>

<link rel="stylesheet" type="text/css" href="./style.css" />

<body>
  <div class="container">
    <div class="container col-sm-8 col-sm-offset-2">
      <div id="subscriberApp">
        <h1>Subscriber List</h1>

        <!-- Add new subscriber form -->

        <div class="panel panel-default">
          <h2 class='text-center'>Add New Subscriber</h2>

          <form v-on:submit='addSubscriber'>
            <div class="col-sm-8">
              <input type="text" class='form-control' v-model='subscriber.name'>
            </div>

            <div class="col-sm-4">
              <input type="submit" value='Add' class='btn btn-primary btn-block'>
            </div>
          </form>
          &nbsp;
        </div>

        <div>
    
        </div>

        <table class="table">
          <thead>
            <th>Done</th>
            <th>Subscriber</th>
            <th>Delete</th>
          </thead>

          <tbody>

            <tr v-for='subscriber in subscribers'>
              <td>

                <input type="checkbox" value="1" id="checkboxFourInput" name="" v-model="subscriber.done" />
              </td>
              <td><span :class="{ subscriberDone: subscriber.done }">{{ subscriber.name }}</span></td>
              <td><button class="btn btn-danger btn-block" v-on:click="deleteSubscriber(subscriber)">Delete</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

<script src="subscriberApp.js" type="text/javascript"></script>
<script src="/models/subscriber.js" type="text/javascript"></script>
<script src="/server.js" type="text/javascript"></script>

</html>